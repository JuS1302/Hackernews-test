        <div class="d-flex gap-2">
          <span class="min-width-24px"><%=numero%>.</span>
            <a data-turbo-method="post" data-csrf-token="MCkbc-P_C1N4WzD05sTp1-37l2uW9ZQjhLV1guTbMjcHlzZFyA2C6QV8BcHztaeikrVjPWsK1DitEIEuVsFdsQ" href="/posts/27/votes?index=0">

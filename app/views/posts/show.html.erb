<div class="container mt-4">
  <h1> Les commentaires </h1>

  <h2 class="text-dark fs-4 mt-4">
    <%= @post.title %>
  </h2>

    <div class="d-flex gap-2">
     <%= link_to @post.url, post_path(@post.id), class:"text-decoration-none" %>
      <span><%= @post.typepost %> |</span>
      <span><%= @post.author %> |</span>
      <span><%= @post.score %> vote(s) |</span>
      <span><%= @post.comments.count %> comment(s) </span>
    </div>

  <div class ="mt-4 border">
    <% @post.comments.each do |comment| %>
      <div class="mt-3 post-comment">
        <p class="text-dark"><%= comment.created_at%></p>
        <p><%= comment.content %></p>
        <p class="post-comment-author"><i> By sim.ju@live.fr</i></p>
        <div data-controller="emoji-picker"
            data-emoji-picker-comment-value=6
            data-emoji-picker-user-value=7>
        <div class="emojis-container">
          <i class="fa-solid fa-face-smile"
              data-action="click->emoji-picker#displayEmojis">
          </i>
        </div>
      </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4 mb-2">
    <%= simple_form_for [@post, @comment] do |f| %>
      <%= f.input :content %>
      <%= f.submit "Submit review", class: "btn btn-warning" %>
    <% end %>
  </div>

</div>
